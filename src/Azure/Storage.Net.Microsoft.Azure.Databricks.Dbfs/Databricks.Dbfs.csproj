<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
     <PackageId>Storage.Net.Microsoft.Azure.Databricks.Dbfs</PackageId>
     <GenerateDocumentationFile>true</GenerateDocumentationFile>
     <LangVersion>latest</LangVersion>
     <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
     <WarningsAsErrors />
     <Description>Extension to Storage.Net that provides a read-only filesystem access to Azure Databricks.</Description>
     <AssemblyName>Storage.Net.Microsoft.Azure.Databricks.Dbfs</AssemblyName>
     <RootNamespace>Storage.Net.Microsoft.Azure.Databricks.Dbfs</RootNamespace>
  </PropertyGroup>

   <PropertyGroup Condition="'$(Configuration)' == 'Release'">
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
   </PropertyGroup>

   <ItemGroup>
      <PackageReference Include="Microsoft.Azure.Databricks.Client" Version="1.1.924.1" />
     <ProjectReference Include="..\..\Storage.Net\Storage.Net.csproj" />
   </ItemGroup>


</Project>
